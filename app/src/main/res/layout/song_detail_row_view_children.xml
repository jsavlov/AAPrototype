<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Track #"
           android:id="@+id/song_track_num_text"
           android:padding="15dp"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Song Title"
           android:id="@+id/song_title_text"
           android:layout_alignBottom="@+id/song_track_num_text"
           android:layout_toEndOf="@+id/song_track_num_text"
           android:padding="15dp"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Song Dur. (mm:ss)"
           android:id="@+id/song_duration_text"
           android:layout_alignBottom="@+id/song_title_text"
           android:layout_alignParentEnd="true"
           android:padding="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:id="@+id/disc_number_text"/>
            <!--
            android:layout_above="@id/song_track_num_text"
            android:layout_alignStart="@id/song_track_num_text"
            -->


</merge>