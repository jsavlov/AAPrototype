<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artwork_cell_image_view"
            android:maxHeight="100dp" android:maxWidth="100dp"
            android:layout_centerInParent="true" android:longClickable="false" android:paddingBottom="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/dimensions_text_view"
            android:layout_marginTop="5dp" android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/data_size_text_view" android:layout_alignParentStart="false"
            android:layout_alignBottom="@id/dimensions_text_view"
            android:layout_toRightOf="@+id/dimensions_text_view"/>
</merge>
